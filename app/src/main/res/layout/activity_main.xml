<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yp_blue"
    android:orientation="vertical">


    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_padding"
            android:layout_marginTop="4dp"
            android:text="@string/app_name"
            android:textColor="@color/yp_white"
            android:textSize="@dimen/text_size" />
    </Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/main_padding"
        android:orientation="vertical">

        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/yp_white"
            android:insetTop="@dimen/button_padding"
            android:insetBottom="@dimen/button_padding"
            android:text="@string/search"
            android:textAllCaps="false"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/text_size"
            app:cornerRadius="@dimen/button_corner_radius"
            app:icon="@drawable/search"
            app:iconGravity="textStart"
            app:iconTint="@color/yp_black"
            app:iconPadding="8dp"
            app:iconSize="@dimen/button_icon_size"
            android:letterSpacing="0"
            />

        <Button
            android:id="@+id/medical_library"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/yp_white"
            android:text="@string/medical_library"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/text_size"
            android:textAllCaps="false"
            app:cornerRadius="@dimen/button_corner_radius"
            android:insetTop="@dimen/button_padding"
            android:insetBottom="@dimen/button_padding"
            app:icon="@drawable/medical_library"
            app:iconGravity="textStart"
            app:iconTint="@color/yp_black"
            app:iconPadding="8dp"
            app:iconSize="@dimen/button_icon_size"
            android:letterSpacing="0"/>

        <Button
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/yp_white"
            android:insetTop="@dimen/button_padding"
            android:insetBottom="@dimen/button_padding"
            android:letterSpacing="0"
            android:text="@string/settings"
            android:textAllCaps="false"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/text_size"
            app:cornerRadius="@dimen/button_corner_radius"
            app:icon="@drawable/settings"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="@dimen/button_icon_size"
            app:iconTint="@color/yp_black" />

    </LinearLayout>

</LinearLayout>
