<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStartWithNavigation="64dp"
        app:navigationIcon="@drawable/arrow_back"
        app:navigationIconTint="?attr/colorOnPrimary"
        app:title="@string/search"
        app:titleTextAppearance="@style/MainTitleStyle"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        style="@style/SearchBackground"
        >
        <EditText
            android:id="@+id/input_text_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search"
            android:inputType="text"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="16sp"
            android:textFontWeight="400"
            android:lines="1"
            android:maxLength="30"
            android:background="@null"
            android:drawablePadding="8dp"
            android:paddingVertical="8.5dp"
            android:paddingHorizontal="12dp"
            style="@style/SearchEditTextColors"
            />
        <ImageView
            android:id="@+id/button_clear_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:contentDescription="@string/clear"
            android:src="@drawable/ic_clear"
            android:paddingHorizontal="12dp"
            android:visibility="gone"
            style="@style/SearchEditTextColors"
            />
    </FrameLayout>
</LinearLayout>
